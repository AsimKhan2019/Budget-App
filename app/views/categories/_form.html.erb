<%= form_for @category do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :icon %>
    <%= form.url_field :icon, class: "form-control" %>
  </div>
  
  <br />

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>