

<div class="d-grid justify-content-center">
  <%= link_to 'New Category', new_category_path, class: 'btn btn-primary btn-sm' %>
  <br />

</div>
<% @categories.each do |g| %>
  <div class="container d-flex justify-content-center">
    <div class="container card d-flex justify-content-between">
    <div class='row'>
    <%=link_to category_path(g) do %>
      <div class='col-md-4'>
        <img src="<%= g.icon %>" alt="Group Icon" width="50" height="50">
      </div>
    
      <div class='col-md-4 card-title'>
        <h3><%= g.name %></h3>
        <span class="badge bg-primary"> <%= g.created_at.strftime("%B, %e at %H:%M") %> </span>
        <h3><%= g.payments.sum(&:amount) %></h3>
        </div>
        
        <%end%>
    </div>
      </div>
  </div>
<% end %>